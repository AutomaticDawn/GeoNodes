<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Visual.EntryScreen">

    <Button
            android:text="Send Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendNotification"
            android:onClick="notify" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Get Location"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/locationButton"
            android:onClick="location" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geoSirina" android:text="Širina"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/locationButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geoDuzina" android:text="Dužina"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/geoSirina"/>
    <Button
            android:text="Open Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openMapButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/geoDuzina" app:layout_constraintStart_toStartOf="parent"
            android:onClick="openMapView"/>
    <Button
            android:text="get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getDatabase" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/openMapButton" app:layout_constraintStart_toStartOf="parent"
            android:onClick="serverRequest"/>
    <Button
            android:text="test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locTest" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/sendNotification" android:onClick="locTest"/>
    <TextView
            android:text="test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getDatabase"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/locationId"
            app:layout_constraintTop_toBottomOf="@+id/locTest" app:layout_constraintEnd_toEndOf="parent"
            tools:text="Enter Location Id"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startThread"
            android:onClick="startThread" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/locationId" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="127dp"/>


</android.support.constraint.ConstraintLayout>