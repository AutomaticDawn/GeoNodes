<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Visual.EntryScreen">

    <Button
            android:text="Start Exploring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startThread"
            android:onClick="startThread"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/readyText" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/stopThread"/>
    <TextView
            android:text="Not Ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/readyText" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/startThread" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="33dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Pause Exploring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopThread" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/startThread" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginBottom="168dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="stopThread"
    />
    <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exitButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp" android:layout_marginTop="79dp"
            app:layout_constraintTop_toBottomOf="@+id/stopThread" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="exitApp"/>


</android.support.constraint.ConstraintLayout>